{
  "name": "vue-sanitize-escape",
  "version": "0.0.1",
  "description": "Vue.js plugin for sanitizing and escaping user input to protect against XSS, SQL injection, and other security vulnerabilities.",
  "main": "src/index.js",
  "module": "src/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "prepublishOnly": "npm run lint && npm run test",
    "build": "webpack --mode production"
  },
  "keywords": [
    "vue",
    "sanitize",
    "escape",
    "security",
    "xss",
    "sqli"
  ],
  "jest": {
    "transform": {
      "^.+\\.js$": "./node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(babel-jest)/)"
    ]
  },
  "author": "Mayur Dusane <mayurdusane1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mayur19/vue-sanitize-escape.git"
  },
  "bugs": {
    "url": "https://github.com/mayur19/vue-sanitize-escape/issues"
  },
  "homepage": "https://github.com/mayur19/vue-sanitize-escape#readme",
  "dependencies": {
    "@jest/globals": "^29.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.40.0",
    "eslint-plugin-vue": "^9.14.1",
    "jest": "^29.5.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "vue": "^2.6.14 || ^3.0.0"
  },
  "files": [
    "src"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
